{
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "eqeqeq": ["error", "always"],
      "no-console": "off",
      "babel/new-cap": 1,
      "babel/object-curly-spacing": 1,
      "babel/no-invalid-this": 1,
      "babel/semi": 1
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "globals": {
      "fixture": true,
      "expect": true,
      "window": true
    },
    "plugins": [
        "babel"
    ]
  }
  